<h3 class="center">Showing Exercises and PRs For {{group}}</h3>
<div class="center">
  <a class="waves-effect waves-light btn modal-trigger" href="#add_new">
    <i class="material-icons left">add</i>Add Exercise
  </a>
</div>

{{> pr_card/_add-modal}}

<div class="Pr_cards">
  {{#each prs}}
  <div class="card">

    <!-- PR CARD TABS -->
    <div class="card-tabs">
      <ul class="tabs tabs-fixed-width">
        <li class="tab">
          <a href="#{{_id}}_1">PRs</a>
        </li>
        <li class="tab">
          <a href="#{{_id}}_2">Update</a>
        </li>
      </ul>
    </div>
    <!-- /PR CARD TABS -->

    <div class="card-content grey lighten-4">
      <div id="{{_id}}_1">
        <span class="card-title">{{exercise_id.name}}</span>
        {{> pr_card/_table}}
      </div>
      <div id="{{_id}}_2">
        <span class="card-title">{{exercise_id.name}}</span>
        {{> pr_card/_form}}
      </div>
    </div>
  </div>
  {{/each}}
</div>